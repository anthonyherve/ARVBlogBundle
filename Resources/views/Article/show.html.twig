{% extends 'ARVBlogBundle::blog.html.twig' %}

{% block body %}
    {{ parent() }}

    <div class="article">
        <h1>{{ article.title }}</h1>
        <div class="date">Ecrit le {{ article.dateModification|date("d/m/Y \à H:i") }}</div>
        <ul class="tags">
            {% for tag in article.tags %}
                <li>{{ tag.name }}</li>
            {% endfor %}
        </ul>
        <div class="content">
            {{ article.content|raw }}
        </div>
    </div>

    <ul>
        <li>
            <a href="{{ path('arv_blog_article_manage') }}">
                Retour à la liste des articles
            </a>
        </li>
        <li>
            <a href="{{ path('arv_blog_article_edit', { 'id': article.id, 'slug': article.slug }) }}">
                Modifier
            </a>
        </li>
        <li>{{ form(delete_form) }}</li>
    </ul>
{% endblock %}
