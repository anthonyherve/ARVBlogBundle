{% extends 'ARVBlogBundle::blog.html.twig' %}

{% block content %}
    <li>
        {% if article is null %}
            <a href="{{ path('arv_blog_comment_new') }}">
                {{ 'arv.blog.action.add_comment'|trans }}
            </a>
        {% else %}
            <a href="{{ path('arv_blog_comment_new', { id_article: article.id }) }}">
                {{ 'arv.blog.action.add_comment'|trans }}
            </a>
        {% endif %}
    </li>

    {% for comment in comments %}
        <div>
            {# Date and user #}
            <div>
                {{ 'arv.blog.table.comment.edited_at'|trans({'%date': comment.dateModification|date('d/m/Y H:i:s'), '%email': comment.email}) }}
            </div>

            {# Content #}
            <div>
                {{ comment.content }}
            </div>

            {# Actions #}
            <div>
                <ul>
                    <li>
                        <a href="{{ path('arv_blog_comment_show', { 'id': comment.id }) }}">{{ 'arv.blog.action.show'|trans }}</a>
                    </li>
                    <li>
                        <a href="{{ path('arv_blog_comment_edit', { 'id': comment.id }) }}">{{ 'arv.blog.action.edit'|trans }}</a>
                    </li>
                    <li>
                        {{ form(delete_forms[comment.id]) }}
                    </li>
                </ul>
            </div>
        </div>
    {% endfor %}

{% endblock %}
